{
  "manifest_version": 2,
  "name": "中文 Figma",
  "short_name": "FigmaCN",
  "description": "中文 Figma 插件，设计师人工翻译校验。",
  "version": "0.35",
  "homepage_url": "https://figma.cool/cn",
  "permissions": [
    "*://*.figma.com/*",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.figma.com/*"
      ],
      "js": [
        "js/content.js",
        "js/data.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "中文 Figma",
    "default_icon": "img/icon-128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}